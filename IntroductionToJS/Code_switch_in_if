			}	else if (browser == 'Chrome' || 'Firefox' || 'Safari' || 'Opera') {
				alert('Да, и эти браузеры мы поддерживаем');
			}	else {
				alert('Мы надеемся, что и в вашем браузере все ок!');
			}/* Напишите if..else, соответствующий следующему switch:
		switch (browser) {
  case 'IE':
    alert( 'О, да у вас IE!' );
    break;

  case 'Chrome':
  case 'Firefox':
  case 'Safari':
  case 'Opera':
    alert( 'Да, и эти браузеры мы поддерживаем' );
    break;

  default:
    alert( 'Мы надеемся, что и в вашем браузере все ок!' );
}*/
	</script>
